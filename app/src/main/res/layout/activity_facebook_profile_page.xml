<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prasanth.socialloginapplication.Sociallogins.FacebookProfilePage">

    <ImageView
        android:id="@+id/fbProfileImage"
        android:layout_width="180dp"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/fbName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/fbProfileImage"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/fbGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fbName"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/fbProfileImage"

        android:textSize="20dp" />

    <TextView
        android:id="@+id/fbEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fbGender"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/fbProfileImage"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/fbemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fbName"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/fbProfileImage"
        android:textSize="20dp" />

</RelativeLayout>
